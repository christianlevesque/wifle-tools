@using WifleTools.Invoicing
@inherits ActionPageBase<Index, Client>
@attribute [Route(Urls.Clients.Index)]

<Listicle Title="Clients"
          Items="_clients">
	<Renderer>
		<ListicleItem Title="@context.Name">
			<HeaderActions>
				<MudIconButton Icon="@Icons.Material.Filled.Edit"
				               Href="@($"{Urls.Clients.Index}/{context.Id}")"
				               Color="Color.Primary"/>
			</HeaderActions>
			<BodyContent>
				<MudText>
					@context.Rate.ToCurrencyString()/word
				</MudText>
			</BodyContent>
		</ListicleItem>
	</Renderer>
</Listicle>

@code {

	private List<Client>? _clients;

	/// <inheritdoc />
	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (!firstRender) return;

		_clients = await Service.Get();
		StateHasChanged();
	}

}