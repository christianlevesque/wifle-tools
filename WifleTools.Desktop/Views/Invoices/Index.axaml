<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:invoices="clr-namespace:WifleTools.Views.Invoices"
	mc:Ignorable="d"
	d:DesignWidth="800"
	d:DesignHeight="450"
	x:Class="WifleTools.Views.Invoices.Index"
	x:DataType="invoices:IndexViewModel">
	<StackPanel>
		<TextBlock>Just some items</TextBlock>
		<ItemsControl ItemsSource="{Binding Invoices}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<StackPanel
						Orientation="Horizontal"
						HorizontalAlignment="Left">
						<TextBlock Text="{Binding For}"/>
					</StackPanel>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<Button Command="{Binding LoadInvoicesCommand}">Reload invoices</Button>
	</StackPanel>
</UserControl>
